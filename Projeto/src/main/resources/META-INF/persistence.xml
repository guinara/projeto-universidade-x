<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="faculdade">
    <class>com.BancoDeDados.Model.Aluno.Aluno</class>
    <class>com.BancoDeDados.Model.Aluno.Professor</class>
    <class>com.BancoDeDados.Model.Aluno.Curso</class>
    <class>com.BancoDeDados.Model.Aluno.Endereco</class>
    <class>com.BancoDeDados.Model.Aluno.Telefone</class>

        <properties>
            <!-- dados da conexao -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/uniqua" />
            <property name="jakarta.persistence.jdbc.user"
                      value="root" />
            <property name="jakarta.persistence.jdbc.password"
                      value="Pass123" />

            <!--  propriedades do hibernate -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />

            <!--  atualiza o banco, gera as tabelas se for preciso -->
            <!--<property name="hibernate.hbm2ddl.auto" value="update" />-->
        </properties>
        </persistence-unit>
    </persistence>